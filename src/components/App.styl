.App
	padding 50px
	.grid
		table
			width 100%
			height 100%
			max-width 500px
			max-height 500px
			margin 0 auto
			tbody
				tr
					td
						width 33.33333333333333%
						min-width 166px
						height 166px
						font-size 100px
						line-height 1
						vertical-align middle
						text-align center
						border-left 3px solid #323a45
						border-top 3px solid #323a45

					&:nth-child(1)>td
						border-top none

					&:nth-child(1)>td:first-child,
					&:nth-child(2)>td:first-child,
					&:nth-child(3)>td:first-child
						border-left none