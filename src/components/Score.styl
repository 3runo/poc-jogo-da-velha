@import '../../style/colors.styl'

.Score
	width 100%
	height 45px
	display flex
	align-items center
	background-color $darker
	color darken($white-0, 50%)
	overflow hidden

	>div
		flex-basis 50%
		padding 0 1px
		transition all .25s ease-in-out
		
		&.active
			color $white-0
			background-color lightness($darker, 29%)

	.scoreboard
		display inline-block
		background-color lightness($darker, 20%)
		font-size 21px
		line-height 1
		padding 13px 35px
		font-weight bold

	.player-left
		text-align right
		.scoreboard
			margin-left 10px

	.player-right
		text-align left
		.scoreboard
			margin-right 10px
